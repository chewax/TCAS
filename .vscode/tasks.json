{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build main",
      "command": "g++",
      "args": [
        "core/math/Vector2.cpp",
        "core/navigation/Conflict.cpp",
        "core/airspace/Drone.cpp",
        "Main.cpp",
        "-o",
        "main.out",
        "-I",
        "./lib",
        "-I",
        "./core",
        "-lncurses",
        "-std=c++11"
      ],
      "problemMatcher": [],
    },
    {
      "type": "shell",
      "label": "run main",
      "command":"./main.out",
      "args": [],
      "problemMatcher": [],
      "dependsOn": [
        "build main"
      ],
    },
    {
      "label": "build-tests",
      "type": "shell",
      "command": "g++",
      "args": [
        "core/math/Vector2.cpp",
        "core/navigation/Conflict.cpp",
        "core/airspace/Drone.cpp",
        "tests/Tests.cpp",
        "-o",
        "${workspaceFolderBasename}-tests.out",
        "-I",
        "./lib",
        "-std=c++11"
      ]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./${workspaceFolderBasename}-tests.out",
      "dependsOn": [
        "build-tests"
      ],
      "problemMatcher": []
    }
  ]
}